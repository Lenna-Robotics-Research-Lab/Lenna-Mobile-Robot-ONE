<launch>
  <param 
    name="robot_description" 
    command="cat $(find lenna_description)/urdf/lenna_description.urdf" />

  <include
    file="$(find gazebo_ros)/launch/empty_world.launch" />

  <node
    name="tf_footprint_base"
    pkg="tf"
    type="static_transform_publisher"
    args="0 0 0 0 0 0 base_link base_footprint 40" />

  <node 
    name="urdf_spawner" 
    pkg="gazebo_ros" 
    type="spawn_model" 
    respawn="false" 
    output="screen" 
    args="-file $(find lenna_description)/urdf/lenna_description.urdf -urdf -model LENNA_URDF" />

  <!-- load the controllers -->
  <rosparam 
    file="$(find lenna_description)/config/config.yaml" 
    command="load" />

  <node name="right_wheel_controller_spawner" pkg ="controller_manager" type="spawner" ns="/LENNA" args="right_wheel_velocity_controller right_wheel_joint_state_controller --shutdown-timeout 5"/>
  <node name="left_wheel_controller_spawner" pkg ="controller_manager" type="spawner" ns="/LENNA" args="left_wheel_velocity_controller left_wheel_joint_state_controller --shutdown-timeout 5"/>

  <!-- converts joint states to TF transforms -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
    <remap from="joint_state" to="/LENNA/joint_states" />
  </node>
</launch>
